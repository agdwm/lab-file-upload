<div class="container">
	<div class="row">
		{{ message }}
		<div class="col-sm-6 centered-form">
			<section class="form-wrap">
				<h3 class="form-title">Signup Form:</h3>
				<form action="/signup" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<label for="username">Username</label>
						<input type="text" name="username" class="form-control input-lg">
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input type="text" name="email" class="form-control input-lg">
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input type="password" name="password" class="form-control input-lg">
					</div>
					<div class="form-group">
						<label for="profile-photo">Profile photo</label>
						<input type="file" name="profile-photo" id="profile-photo" class="form-control btn-file">
					</div>

					<button type="submit" class="btn btn-info btn-lg btn-block">Signup</button>
				</form>
			</section>
		</div>
	</div>
</div>