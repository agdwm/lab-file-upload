<div class="container">
	<div class="row">
		<div class="col-sm-6 centered-form">
			<section class="form-wrap">
				<h3 class="form-title">New Post</h3>
				<form action="/posts/create" method="post" enctype="multipart/form-data">
					<div class="form-group">
						<label for="post-photo">Post Photo</label>
						<input type="file" class="form-control btn-file" id="post-photo" name="post-photo" required>
					</div>
					<div class="form-group">
						<label for="content">Content</label>
						<textarea class="form-control" name="content" id="content" cols="30" rows="10" required></textarea>
					</div>
					<button type="submit" class="btn btn-info btn-lg btn-block">Add</button>
				</form>
			</section>
		</div>
	</div>
</div>